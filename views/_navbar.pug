mixin navbarName(currentLink)
    nav.navbar.navbar-expand-md.navbar-light.bg-light
        a.navbar-brand(href='#')
            img(src='http://localhost:3000/Logo2.png',alt='Svelte Project Planner', style='width:100px')
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav')
            span.navbar-toggler-icon

        div.collapse.navbar-collapse(id='navbarNav')
            div.d-flex.mr-auto
                ul.navbar-nav
                    li.nav-item(class="Home" === currentLink ? "active" : null)
                        a.nav-link(href='/') Home
                    li.nav-item(class="Projects" === currentLink ? "active" : null)
                        a.nav-link(href='/project') Projects
                    li.nav-item(class="Persons" === currentLink ? "active" : null)
                        a.nav-link(href='/person') Persons
                    li.nav-item(class="Clients" === currentLink ? "active" : null)
                        a.nav-link(href='/client') Clients
            div.d-flex.float-right
                a.nav-item.nav-link(href='#', style='color:marinblue') Login
            div.d-flex.align-self-stretch.float-right
                if(currentLink==="Person"| currentLink==="Project" | currentLink==="Client")
                    button.btn.btn-primary.btn-sm.active(data-toggle='collapse', data-target='#dropdownList')
                        i(class="material-icons") add
                else
                    button.btn.btn-dark.btn-sm(data-toggle='collapse', data-target='#dropdownList')
                        i(class="material-icons") add
                div.collapse.float-right(id='dropdownList')
                    div.card.bg-dark(style="width: 18 rem;")
                        div.text-white.card-body
                            a.card-link(href='/projectAdd', style='color:white') Project
                            a.card-link(href='/personAdd', style='color:white') Person
                            a.card-link(href='/clientAdd', style='color:white') Client